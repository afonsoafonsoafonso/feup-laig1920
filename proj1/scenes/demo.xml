<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="perspCamera1">
        <perspective id="perspCamera1" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="perspCamera2" near="0.3" far="550" angle="60">
            <from x="35" y="12" z="35" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="0.1" far="500" left="-20" right="20" top="22" bottom="-22">
            <from x="6" y="5" z="30" />
            <to x="6" y="5" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="demoTexture2" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="demoMaterial2" shininess="5">
            <emission r="0.5" g="0.5" b="0.5" a="1.0" />
            <ambient r="1.0" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.6" g="0.5" b="0.5" a="1.0" />
            <specular r="0.6" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="2" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation id="demoTransform2">
            <scale x="2" y="2" z="1" />
            <rotate axis="x" angle="45" />
            <rotate axis="z" angle="45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base_r="2" top_r="2" height="2" slices="10" stacks="5" /> 
        </primitive>
        <primitive id="demoTorus">
            <torus inner_r="1" outer_r="2" slices="5" loops="3" /> 
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="1" y1="0" z1="0" x2="0" y2="1" z2="0" x3="0" y3="0" z3="0"/>
        </primitive>
    </primitives>

    <components>
        <component id="demoComp">
            <transformation>
                <transformationref id="demoTransform2"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
                <transformationref id="demoTransform"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoTorus" />
                <componentref id="demoComp" />
            </children>
        </component>
    </components>
    
</lxs>