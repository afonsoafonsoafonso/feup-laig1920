<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="brightWhite" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
        <primitive id="boardEdge">
            <cylinder base="0.2" top="0.2" height="5" slices="50" stacks="5" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="brightWhite" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="boardEdge" />
            </children>
        </component>

        <component id="skyBoxPlane">
            <transformation>
                <translate x="-1" y="0" z="2" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="0" length_t="0" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBox">
            <transformation>
                <scale x="40" y="40" z="40" />
                <translate x="0" y="0" z="-2" />
                <translate x="0" y="1" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="skyBoxPlane" />
                <componentref id="skyBoxPlane2" />
                <componentref id="skyBoxPlane3" />
                <componentref id="skyBoxPlane4" />
                <componentref id="skyBoxPlane5" />
                <componentref id="skyBoxPlane6" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="skyBox" />
            </children>
        </component>
    </components>
</lxs>