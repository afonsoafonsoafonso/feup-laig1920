<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="15" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="skyBoxTop" file="scenes/images/up.jpg" />
        <texture id="skyBoxDown" file="scenes/images/down.jpg" />
        <texture id="skyBoxLeft" file="scenes/images/left.jpg" />
        <texture id="skyBoxRight" file="scenes/images/right.jpg" />
        <texture id="skyBoxBack" file="scenes/images/back.jpg" />
        <texture id="skyBoxFront" file="scenes/images/front.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>

    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
    </primitives>

    <components>

        <component id="rect">
            <transformation>
            </transformation>
            <animationref id="anim"/>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBoxDown">
            <transformation>
                <rotate axis= "x" angle="-90" />
                <translate x="0" y="-2" z="-1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="skyBoxDown" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBoxTop">
            <transformation>
                <rotate axis= "x" angle="90" />
                <translate x="0" y="2" z="-1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="skyBoxTop" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBoxLeft">
            <transformation>
                <rotate axis= "x" angle="180" />
                <translate x="0" y="0" z="-3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="skyBoxLeft" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBoxBack">
            <transformation>
                <translate x="1" y="0" z="2" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="skyBoxBack" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBoxRight">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="skyBoxRight" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBoxFront">
            <transformation>
                <translate x="-1" y="0" z="2" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="skyBoxFront" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="skyBox">
            <transformation>
                <scale x="40" y="40" z="40" />
                <translate x="0" y="0" z="-2" />
                <translate x="0" y="1" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="skyBoxFront" />
                <componentref id="skyBoxRight" />
                <componentref id="skyBoxBack" />
                <componentref id="skyBoxLeft" />
                <componentref id="skyBoxTop" />
                <componentref id="skyBoxDown" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="rect" />
            </children>
        </component>
    </components>
</lxs>